---
import IconLogo from "./icons/IconLogo.astro";
---

<footer class="footer_layout">
    <section class="footer_container">
        <img src="/assets/OIG1.png" alt="">
        <div class="info_me">
            <a href="https://github.com/MicroCats37" target="_blank" rel="noopener noreferrer">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
            </a>
        </div>
        <div class="footer_info">
            <p>Info:</p>
            <a href="https://fakestoreapi.com/" target="_blank" rel="noopener noreferrer">Docs</a>
            <a href="/info">Sobre Mi</a>
        </div>
    </section>
</footer>

<style>
    .footer_layout{
        position: absolute;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 150px;
        background-image: linear-gradient(to bottom, rgb(90, 79, 210),rgb(62, 49, 200), rgb(65, 58, 142));
        padding: 30px;
    }
    .footer_container{
        display: flex;
        width: 100%;
        flex-direction: row;
        justify-content: space-evenly;
        align-items:center;
    }

    img{
        width: 100px;
    }
    .info_me{
        color:white;
        display:flex;
    }

    .info_me>a{
        display: flex;
        background-color: rgba(0, 0, 0, 0.454);
        padding: 10px;
        border-radius: 10px;
        
    }

    .footer_info{
        gap:20px;
        display: flex;
        color: white;
        font-size: 700;
        font-family: 'ProductSans-Bold';
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.862);
    }
    .footer_info p{
        color: black;
        font-weight: 1000;
        
    }

    .footer_info a{
        text-decoration: underline;
        
    }

    

    @media (max-width: 748px) {
        .footer_layout{
            justify-content:center;
            align-items: center;
            padding: 10px
        }
        .footer_info{
            display: flex;
            flex-direction: column;
            gap:5px;
            margin:10px;
        }
    }

</style>